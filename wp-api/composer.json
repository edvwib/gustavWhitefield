{
    "name": "wordplate/wordplate",
    "description": "A modern WordPress stack built with Composer",
    "keywords": ["wordplate", "wordpress", "boilerplate", "plate"],
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "google/recaptcha": "^1.2",
        "jeffochoa/validator-factory": "^1.0",
        "johnbillion/extended-cpts": "^4.2",
        "swiftmailer/swiftmailer": "^6.1",
        "symfony/polyfill-mbstring": "^1.10",
        "wordplate/acf": "^6.0",
        "wordplate/framework": "^7.0",
        "wordplate/plate": "^4.0",
        "wordpress/classic-editor": "^1.4",
        "wpackagist-plugin/advanced-custom-fields-pro": "^5.7"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
          "type": "package",
          "package": {
            "name": "wordpress/classic-editor",
            "type": "wordpress-muplugin",
            "version": "1.4",
            "dist": {
              "url": "https://downloads.wordpress.org/plugin/classic-editor.1.4.zip",
              "type": "zip"
            }
          }
        },
        {
          "type": "package",
          "package": {
            "name": "wpackagist-plugin/advanced-custom-fields-pro",
            "type": "wordpress-muplugin",
            "version": "5.7.10",
            "dist": {
              "url": "https://connect.advancedcustomfields.com/index.php?v=5.7.10&p=pro&a=download&k=YOUR-KEY",
              "type": "zip"
            }
          }
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "extra": {
        "installer-paths": {
            "public/mu-plugins/{$name}": [
              "type:wordpress-muplugin",
              "wordplate/plate"
            ],
            "public/plugins/{$name}": ["type:wordpress-plugin"],
            "public/themes/{$name}": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/wordpress"
    },
    "config": {
        "vendor-dir": "./public/vendor",
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
